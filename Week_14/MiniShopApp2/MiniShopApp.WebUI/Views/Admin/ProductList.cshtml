@model List<Product>

<div class="row">
    <div class=" col-md-12">
        <h6 class="display-4">Admin Products Managament</h6>
        <hr/>
        <a href="/admin/products/create" class="btn btn-sm btn-primary">Create Product</a>
        <table class="table table-bordered mt-2">
            <thead>
                <tr>
                    <th width="30">ID</th>
                    <th width="100">Image</th>
                    <th>Name</th>
                    <th width="20">Home</th>
                    <th width="20">Approved</th>
                    <th width="30">Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count > 0)
                {
                    @foreach (var product in Model)
                    {
                         <tr>
                            <td >@product.ProductId</td>
                            <td ><img  src="~/img/@product.ImageUrl" width="80"/></td>
                            <td>@product.Name</td>
                            <td>
                                @if (product.IsHome)
                                {
                                    <i class="fa-solid fa-circle-check text-success"></i>


                                }
                                else
                                {
                                    <i class="fa-solid fa-circle-xmark text-danger"></i>
                                }
                                <form action="/admin/AktifEt" method="post" class="d-inline">
                                    <input type="hidden" name="Id" value="@product.ProductId" />
                                    <button type="submit" class="btn btn-sm btn-success">AktifEt</button>
                                </form>
                                <form action="/admin/PasifEt" method="post" class="d-inline">
                                    <input type="hidden" name="Id" value="@product.ProductId" />
                                    <button type="submit" class="btn btn-sm btn-danger">PasifEt</button>
                                </form>
                                <div>
                                    <a href="#">content</a>
                                </div>
                                <input type="checkbox" name="Id" value="" />

                            </td>
                            <td>
                                @if (product.IsApproved)
                                {
                                    <i class="fa-solid fa-circle-check text-success"></i>
                                }
                                else
                                {
                                    <i class="fa-solid fa-circle-xmark text-danger"></i>
                                }
                            </td>
                            <td >@product.Price</td>
                            <td>
                                <a href="/admin/Products/@product.ProductId" class="btn btn-sm btn-primary mr-2">Edit</a>
                                <form action="/admin/ProductDelete" method="post" class="d-inline">
                                    <input type="hidden" name="productId" value="@product.ProductId" />
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    //Ürün olmadığında yapılacak işlem
                }

            </tbody>
        </table>
    </div>
</div>