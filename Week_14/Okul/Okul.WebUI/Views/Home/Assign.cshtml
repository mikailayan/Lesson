@model Okul.DAL.Entities.StudentModel

<div class="row">
    <div class="col-md-4">
        <div class="form-group">
            <label class="col-form-label text-danger">First Name: </label>
            <label class="col-form-label">@Model.FirstName</label>
        </div>
        <div class="form-group">
            <label class="col-form-label text-danger">Last Name: </label>
            <label class="col-form-label">@Model.LastName</label>
        </div>
    </div>
    <div class="col-md-8">
        @for (int i = 0; i < Model.SelectedLesson.Count; i++)
        {
            <input type="hidden" name="SelectedCourses[@i].CourseId" value="@Model.SelectedLesson[i].LessonId" />
            <input type="hidden" name="SelectedCourses[@i].Name" value="@Model.SelectedLesson[i].LessonName" />
        }
        @foreach (var item in (List<Okul.DAL.Entities.Lesson>)ViewBag.Lessons)
        {
            <div class="form-check">
                <input class="form-check-input" type="checkbox" value="@item.LessonId" name="courseIds" id="course_@item.LessonId" @(Model.SelectedLesson.Any(x => x.LessonId == item.LessonId) ? "checked" : "") />
                <label class="form-check-label" for="course_@item.LessonId">@item.LessonName</label>
            </div>
        }
    </div>
</div>