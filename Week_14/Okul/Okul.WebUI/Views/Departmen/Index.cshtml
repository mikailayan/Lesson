@model IEnumerable<Okul.DAL.Entities.Departmen>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="AddDepartmen">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DepartmenName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DepartmenHead)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmenName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DepartmenHead)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.DepartmenId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.DepartmenId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.DepartmenId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
