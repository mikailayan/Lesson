@model List<OrderListModel>

<h6 class="display-4">Orders</h6>
<hr />  
@foreach (var order in Model)
{
<table class="table table-sm table-bordered mb-3">
    <thead>
        <tr class="table-info">
            <th colspan="2">Order Number : #@order.OrderNumber | Order Date: @order.OrderDate</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Total</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var orderItem in order.OrderItems)
        {
            <tr>
                <td width="25px">
                    <a href="#">
                        <img src="~/img/@orderItem.ImageUrl" alt="Alternate Text" width="20" />
                    </a>
                </td>
                <td>@orderItem.Name</td>
                <td width="100px">@orderItem.Price</td>
                <td width="20px">@orderItem.Quantity</td>
                <td width="150px">@((orderItem.Price*orderItem.Quantity).ToString("c"))</td>
            </tr>
        }
    </tbody>
</table>
<table class="table table-sm table-bordered mb-3">

    <tfoot>
        <tr>
            <th colspan="2"><span class="text-danger">Customer Name:</span> @order.FirstName @order.LastName</th>
            <td rowspan="4">Total: @order.TotalPrice().ToString("c")</td>
        </tr>
        <tr>
            <th><span class="text-danger">Customer Address:</span> @order.Address</th>
            <th width="600px"><span class="text-danger">Customer City:</span> @order.City</th>
        </tr>
        <tr>
            <th><span class="text-danger">Customer Phone:</span> @order.Phone</th>
            <th><span class="text-danger">Customer Email:</span> @order.Email</th>
        </tr>
        <tr>
            <th><span class="text-danger">OrderState:</span> @order.OrderState</th>
            <th><span class="text-danger">PaymentType:</span> @order.PaymentType</th>
        </tr>

    </tfoot>
</table>

    }
