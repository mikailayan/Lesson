@model List<Product>

@{
    ViewData["Title"] = "Home Page";
}


<div class="row">
    <div class="col-md-3">
        @*buraya kategoriler gelecek*@
        @await Component.InvokeAsync("Categories")
        <div class="card mt-3">
            <div class="card-header">
                <h5>Search</h5>
            </div>
            <div class="card-body">
                <form action="Search">
                    <div class="form-group">
                        <input type="text" name="q" class="form-control" placeholder="Search" />
                        <div class="mt-2">
                            <button type="submit" class="btn btn-danger w-100 btn-sm">Search</button>
                        </div>
                    </div>
                </form>
            </div>
        
        </div>
    </div>
    <div class="col-md-9">
        <div class="row">
            @foreach (var Product in Model)
            {

            <div class="col-md-4">
                @await Html.PartialAsync("_Product", Product)
                @*bunu tag helperla da yapabiliriz*@
                @*<partial name="_Product" model="product" />*@ @*böyle de yazabilirdik*@
            </div>
            }
        </div>
    </div>
</div>
