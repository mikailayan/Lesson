@model Product



<div class="card mb-2">
    <img src="~/img/@Model.ImageUrl" height="400" />
    <div class="card-body">
        <h5 class="card-title text-center">@Model.Name</h5>
        <small class="text-muted">
            @Model.Price <i class="fa-solid fa-turkish-lira-sign"></i> 
        </small>
        <div class="card-footer text-center bg-white d-flex justify-content-around p-1">
            <a 
               asp-controller="MiniShop"
               asp-action="Details"
               asp-route-url=@Model.Url
               class="btn btn-sm btn-primary">Detail</a>
            <a href="#" class="btn btn-sm btn-success">Card</a>
        </div>
    </div>
</div>